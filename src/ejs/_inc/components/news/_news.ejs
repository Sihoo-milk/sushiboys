<section class="section">
  <h2 class="heading" data-heading="News">
    お知らせ
  </h2>
  <ul class="news" data-news>
    <% let posts = newsData.posts; %>
    <% posts.forEach(function(post) { %>
    <li class="news__item">
      <a class="news__anchor" href="<%- post.url %>">
        <figure class="news__thumbnail">
          <img class="news__thumbnail-image" src="<%- post.image[0].hero %>" alt="<%- post.alt[0].hero %>">
        </figure>
        <h2 class="news__title"><%- post.title %></h2>
      </a>
    </li>
    <% }); %>
  </ul>
</section>
