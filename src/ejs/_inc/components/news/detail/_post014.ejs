<section class="section">
  <h2 class="heading" data-heading="News">
    お知らせ
  </h2>
  <article class="article">
    <% let posts = newsData.posts; %>
    <figure class="article__hero">
      <img class="article__hero-image" src="<%- posts[13].image[0].hero %>" alt="<%- posts[13].alt[0].hero %>">
    </figure>
    <h2 class="heading"><%- posts[13].title %></h2>
    <div class="content-wrap">
      <div class="article__text">
        <% posts[13].leads.forEach(function(lead) { %>
        <p class="text"><%- lead %></p>
        <% }); %>
      </div>
    </div>
  </article>
  <div class="button__wrap">
    <a class="button" href="/news/">
      <span class="button__text">Back</span>
    </a>
  </div>
</section>
