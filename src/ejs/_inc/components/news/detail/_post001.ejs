<section class="section">
  <h2 class="heading" data-heading="News">お知らせ</h2>
  <article class="article">
    <% let posts = newsData.posts; %>
    <figure class="article__hero">
      <img class="article__hero-image" src="<%- posts[0].image[0].hero %>" alt="<%- posts[0].alt[0].hero %>">
    </figure>
    <h2 class="article__title"><%- posts[0].title %></h2>
    <div class="article__inner">
      <% posts[0].leads.forEach(lead => { %>
      <p class="text"><%- lead %></p>
      <% }); %>
    </div>
  </article>
  <div class="button__wrap">
    <a class="button" href="/news/">
      <span class="button__text">Back</span>
    </a>
  </div>
</section>
