<section class="section">
  <div class="article">
    <% let records = discographyData.records; %>
    <div class="article__inner">
      <p class="article__jacket">
        <img class="article__jacket-image" src="<%- records[1].image %>" alt="<%- records[1].alt %>">
      </p>
      <div class="article__caption">
        <h2 class="heading"><%- records[1].title %></h2>
        <ul class="article__caption-list">
          <li class="article__caption-item">作品種別 : <%- records[1].kind %></li>
          <li class="article__caption-item">発売日 : <%- records[1].release %></li>
          <li class="article__caption-item">価格 : <%- records[1].price %></li>
        </ul>
        <h3 class="article__caption-heading">Song contents</h3>
        <ol class="article__caption-list article__caption-list--song">
          <% records[1].songs.forEach(function(song) { %>
          <li class="article__caption-item">
            <%- song %>
          </li>
          <% }); %>
        </ol>
        <% if (!records[0].bonusTracks[0].trim() === false) { %>
        <h3 class="article__caption-heading">Bonus track</h3>
        <ol class="article__caption-list article__caption-list--song">
          <% records[1].bonusTracks.forEach(function(bonusTrack) { %>
          <li class="article__caption-item">
            <%- bonusTrack %>
          </li>
          <% }); %>
        </ol>
        <% } %>
      </div>
    </div>
  </div>
  <div class="button__wrap">
    <a class="button" href="/discography/">
      <span class="button__text">Back</span>
    </a>
  </div>
</section>
