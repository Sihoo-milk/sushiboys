<section class="section">
  <ul class="discography-detail">
    <% let eps = discographyData.eps; %>
    <li class="discography-detail__item">
      <div class="discography-detail__thumbnail">
        <img class="discography-detail__thumbnail-image" src="<%- eps[4].image %>" alt="<%- eps[4].alt %>">
      </div>
      <div class="discography-detail__caption">
        <h2 class="title"><%- eps[4].title %></h2>
        <ul class="discography-detail__caption-list">
          <li class="discography-detail__caption-item">作品種別 : <%- eps[4].kind %></li>
          <li class="discography-detail__caption-item">発売日 : <%- eps[4].release %></li>
          <li class="discography-detail__caption-item">価格 : <%- eps[4].price %></li>
          <li class="discography-detail__caption-item">ご購入は<a href="<%- eps[4].link %>" target="_blank" rel="noopener noreferrer">こちら</a>から</li>
        </ul>
        <h3 class="discography-detail__caption-heading">Song contents</h3>
        <ol class="discography-detail__caption-list">
          <% eps[4].songs.forEach(function(song) { %>
          <li class="discography-detail__caption-item">
            <%- song %>
          </li>
          <% }); %>
        </ol>
        <% if (!eps[4].bonusTracks[0].trim() == '') { %>
        <h3 class="discography-detail__caption-heading">Bonus track</h3>
        <ol class="discography-detail__caption-list">
          <% eps[4].bonusTracks.forEach(function(bonusTrack) { %>
          <li class="discography-detail__caption-item">
            <%- bonusTrack %>
          </li>
          <% }); %>
        </ol>
        <% } %>
      </div>
    </li>
  </ul>
</section>
